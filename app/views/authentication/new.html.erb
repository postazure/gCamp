<div class="col-sm-offset-3">


  <div class="col-sm-7">

    <div class="well">
      <h2>Sign into gCamp!</h2>

      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_tag signin_path do %>
        <%= label_tag :email, nil, class:"control-label" %>
        <%= email_field_tag :email, "", class:"form-control" %><br>

        <%= label_tag :password, nil, class:"control-label" %>
        <%= text_field_tag :password, "", class:"form-control" %><br>

        <%= submit_tag "Sign In", id:"submit-user", class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
