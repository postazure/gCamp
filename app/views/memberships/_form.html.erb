<%= form_for [@project, @new_membership], html:{class:"form-inline"} do |f| %>

  <%= f.collection_select :user_id, User.all, :id, :full_name, {prompt: "Please select a user..."}, {class:"form-control"} %>
  <%= f.collection_select :role_id, Role.all, :id, :title, {include_blank: false}, {class:"form-control"} %>

  <%= f.submit "Add New Member", class:"btn btn-primary" %>
<% end %>
