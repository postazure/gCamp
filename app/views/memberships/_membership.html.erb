<% if membership.user %>
  <div class="row">
    <div class="col-sm-2">
      <div class="text-center" style="line-height:2.5">
        <h4><%= link_to membership.user.full_name, user_path(membership.user) %></h4>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="form-inline">
        <%= form_for [@project, membership] do |f| %>
          <%= f.collection_select :role_id, Role.all, :id, :title, {include_blank: false}, class:"form-control" %>
          <%= f.submit "Update", class:"btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-1" style="line-height:2.5">
      <%= link_to export_path, class:"span", style:"color:black" do %>
      <span class="glyphicon glyphicon-remove"></span>
      <% end %>
    </div>
  </div>
<% end %>
