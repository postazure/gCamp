<%= form_for @project, html:{class:"form-horizontal", role:"form"} do |f| %>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-5">
      <%= render partial: "shared/errors", locals:{form_instance: @project} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class:"col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :name, class:"form-control", id:"project-name-field" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
      <%= f.submit class:"btn btn-primary", id:"submit-project-action" %>
      <%= link_to 'cancel', projects_path, class:"btn btn-default" %>
    </div>
  </div>
<% end %>
