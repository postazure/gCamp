<%= form_for([@project, @task], html:{class:"form-horizontal", role:"form"}) do |f| %>

  <%= render partial: "shared/errors", locals:{form_instance: @task} %>

  <div class="form-group">
    <%= f.label :description, class:"col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :description, class:"form-control", id:"task-description-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class:"col-sm-2" %>
    <div class="col-sm-3">
      <%= f.date_field :due_date, class:"form-control" %>
    </div>
  </div>

  <% if params["action"] == "edit" %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= f.check_box :completed %>
        <%= f.label :completed %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit class:"btn btn-primary", id:"submit-task-action" %>

      <% if params["action"] == "new" %>
        <%= link_to 'cancel', project_tasks_path(params[:project_id]), class:"btn btn-default" %>
      <% else %>
        <%= link_to 'cancel', project_task_path(@project, @task), class:"btn btn-default" %>
      <% end %>
    </div>
  </div>
<% end %>
