<%= form_for(@task, html:{class:"form-horizontal", role:"form"}) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, class:"col-sm-2 control-label text-center" %>
    <div class="col-sm-5">
      <%= f.text_field :description, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_date, class:"col-sm-2 control-label text-center" %>
    <div class="col-sm-3">
      <%= f.date_field :due_date, class:"form-control" %>
    </div>
  </div>

  <% if params["action"] == "edit" %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= f.check_box :completed, class:"" %>
        <%= f.label :completed, class:"control-label text-center" %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
    <%= f.submit class:"btn btn-primary" %>
    <%= link_to 'cancel', tasks_path, class:"btn btn-default" %>
    </div>
  </div>
<% end %>
