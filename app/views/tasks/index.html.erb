<header class="page-header">

  <div class="pull-right">
    <%= link_to export_path, class:"btn btn-info span" do %>
      <span class="glyphicon glyphicon-download-alt"></span>
      <span>Download CSV</span>
    <% end %>

    <%= link_to 'New Task', new_task_path, class:"btn btn-info" %>
  </div>

    <div class="pull-right" style="margin-right:10px;" >
      <div style="line-height:2.5">
      <%= link_to 'All', tasks_path(tasks_filter_params({"filter_completed" => nil})), class:("active-link" if @active_link == "All") %>
      |
      <%= link_to 'Incomplete', tasks_path(tasks_filter_params({"filter_completed" => true})), class:("active-link" if @active_link == "Incomplete") %>
      </div>
    </div>
  <h1>Tasks</h1>
</header>

<table class="table">
  <thead>
    <tr>
      <th><%= link_to "Description", tasks_path(tasks_filter_params({"order_by" => "description"})) %></th>
      <th><%= link_to "Completed", tasks_path(tasks_filter_params({"order_by" => "completed"})) %></th>
      <th><%= link_to "Due", tasks_path(tasks_filter_params({"order_by" => "due_date"})) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class=<%= "danger" if upcomming(task) %>>
        <td><%= task.description %></td>
        <td><%= task.completed %></td>
        <td><%= task.due_date.strftime("%m/%d/%Y") unless task.due_date.nil? %></td>
        <td>
          <div class="pull-right">
            <%= link_to 'Destroy', task, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= link_to 'Edit', edit_task_path(task),  class:"btn btn-info" %>
            <%= link_to 'Show', task, class:"btn btn-success" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
