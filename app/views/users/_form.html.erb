<%= form_for @user, html:{class:"form-horizontal"} do |f| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

    <ul>
      <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class:"col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :first_name, class:"form-control" %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class:"col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :last_name, class:"form-control" %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class:"col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :email, class:"form-control" %><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit class:"btn btn-primary" %>
      <%= link_to 'cancel', users_path, class:"btn btn-default" %>
    </div>
  </div>

<% end %>
