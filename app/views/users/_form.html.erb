<%= form_for @user, html:{class:"form-horizontal"} do |f| %>
  <%= render partial: "shared/errors", locals:{form_instance: @user} %>

  <div class="form-group">
    <%= f.label :first_name, class:"col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :first_name, class:"form-control", id:"first-name-field" %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class:"col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :last_name, class:"form-control", id:"last-name-field" %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class:"col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :email, class:"form-control", id:"email-field" %><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit class:"btn btn-primary", id:"submit-user-action" %>
      <%= link_to 'cancel', users_path, class:"btn btn-default" %>
    </div>
  </div>

<% end %>
